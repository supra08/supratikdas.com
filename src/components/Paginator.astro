---
import type { PaginationLink } from "@/types";

interface Props {
	nextUrl?: PaginationLink;
	prevUrl?: PaginationLink;
}

const { nextUrl, prevUrl } = Astro.props;
---

{
	(prevUrl || nextUrl) && (
		<nav class="mt-8 flex items-center gap-x-4 font-sans">
			{prevUrl && (
				<a
					class="me-auto bg-teGray px-4 py-2 font-bold text-teBlack transition-colors hover:bg-teOrange/20"
					data-astro-prefetch
					href={prevUrl.url}
				>
					{prevUrl.srLabel && <span class="sr-only">{prevUrl.srLabel}</span>}
					{prevUrl.text ? prevUrl.text : "Previous"}
				</a>
			)}
			{nextUrl && (
				<a
					class="ms-auto bg-teGray px-4 py-2 font-bold text-teBlack transition-colors hover:bg-teOrange/20"
					data-astro-prefetch
					href={nextUrl.url}
				>
					{nextUrl.srLabel && <span class="sr-only">{nextUrl.srLabel}</span>}
					{nextUrl.text ? nextUrl.text : "Next"}
				</a>
			)}
		</nav>
	)
}
